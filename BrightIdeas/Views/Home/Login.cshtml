@{
    ViewData["Title"] = "Home Page";
}
@model LogUser

<div class="text-center">
    <h3>Login</h3>
    <h1 class="display-5">Bright Ideas</h1>
</div>
<link rel="stylesheet" href="~/css/new.css">

    <div class="box1">
        <form action="process" method="post">
            <div class="form-group">
                <label asp-for="LEmail">Email</label>
                <span asp-validation-for="LEmail"></span>
                <input type="text" asp-for="LEmail" class="form-control left"/>
            </div>
            <div class="form-group">
                <label asp-for="LPassword">Password</label>
                <span asp-validation-for="LPassword"></span>
                <input type="password" asp-for="LPassword" class="form-control left"/>
            </div>
            <input type="submit" class="btn btn-success">
        </form>

    </div>
    <div class="box2">
        <p></p>
          <h4>Not Registered; please click below</h4>
        <a href="/" class="btn btn-primary">Register</a>

    </div>